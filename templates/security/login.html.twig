{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-900">
        <div class="bg-gray-800 p-8 rounded-lg shadow-lg max-w-sm w-full">
            <form method="post" class="space-y-6">
                {% if error %}
                    <div class="alert alert-danger bg-red-500 text-white p-3 rounded-lg mb-4">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-white">
                        You are logged in as {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}" class="text-blue-400 hover:underline">Logout</a>
                    </div>
                {% endif %}

                <h1 class="text-3xl font-semibold text-center text-white mb-6">Connexion</h1>

                <!-- Email input -->
                <div class="space-y-2">
                    <label for="username" class="block text-white text-lg">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="w-full px-4 py-2 text-gray-900 rounded-lg border-2 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400" autocomplete="email" required autofocus>
                </div>

                <!-- Password input -->
                <div class="space-y-2">
                    <label for="password" class="block text-white text-lg">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="w-full px-4 py-2 text-gray-900 rounded-lg border-2 border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me" class="text-gray-900">
                    <label for="_remember_me" class="text-white">Remember me</label>
                </div>
                #}

                <button type="submit" class="w-full py-3 text-lg font-semibold bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-300">
                    Valider
                </button>
            </form>
        </div>
    </div>
{% endblock %}
