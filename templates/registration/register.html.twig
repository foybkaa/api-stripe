{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-900">
        <div class="max-w-md w-full bg-gray-800 p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-semibold text-center text-white mb-6">Inscription</h1>

            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

            <div class="space-y-4">
                <div class="form-group">
                    {{ form_row(registrationForm.email, {
                        'label': 'Email',
                        'attr': {
                            'class': 'w-full px-4 py-2 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500',
                            'placeholder': 'Entrez votre email'
                        }
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de passe',
                        'attr': {
                            'class': 'w-full px-4 py-2 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500',
                            'placeholder': 'Choisissez un mot de passe'
                        }
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'h-4 w-4 text-blue-500 border-gray-300 focus:ring-blue-500',
                        }
                    }) }}
                    <label for="registrationForm_agreeTerms" class="text-gray-300 ml-2">J'accepte les termes et conditions</label>
                </div>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white px-6 py-3 rounded-lg text-lg hover:bg-blue-600 transition duration-300">
                S'inscrire
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
